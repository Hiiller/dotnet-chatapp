<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ChatApp.Client.Views.SelectWindow"
        xmlns:viewModels="clr-namespace:ChatApp.Client.ViewModels"
        x:DataType="viewModels:SelectWindowViewModel"
        Title="SelectView">
    <StackPanel>
        <TextBlock Text="Select a Friend" FontSize="24" HorizontalAlignment="Center"/>
        <ListBox ItemsSource="{Binding Friends}" 
                 SelectedItem="{Binding SelectedFriend}"
               
                 Margin="10" Height="200"/>
        
        <Button Content="Send Message" Command="{Binding SendMessageCommand}" Margin="10"/>
    </StackPanel>
</Window>
