<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ChatApp.Client.ViewModels"
        x:Class="ChatApp.Client.Views.SecurityDialog"
        x:DataType="vm:SecurityViewModel"
        Width="420" Height="260"
        Title="账号与安全"
        CanResize="False">
  <Design.DataContext>
    <vm:SecurityViewModel />
  </Design.DataContext>
  <Border Padding="16">
    <Grid RowDefinitions="Auto,*,Auto">
      <TextBlock Text="修改密码" FontSize="18" FontWeight="SemiBold"/>
      <StackPanel Grid.Row="1" Spacing="10">
        <TextBlock Text="当前密码（可选）"/>
        <TextBox Text="{Binding OldPassword, Mode=TwoWay}"/>
        <TextBlock Text="新密码"/>
        <TextBox Text="{Binding NewPassword, Mode=TwoWay}"/>
      </StackPanel>
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="取消" Command="{Binding CancelCommand}"/>
        <Button Content="保存" Command="{Binding SaveCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
